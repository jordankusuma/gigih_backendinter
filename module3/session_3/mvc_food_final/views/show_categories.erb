<h1>SHOW CATEGORIES IN ITEM ID = <%= items.id%></h1>

<a href='/'> << Back </a>

<form action="/items/<%= items.id%>/categories" method="POST">
    <select name="pick_category">
        <% categories.each do |category| %>
            <option value="<%= category.id %>" id="<%= category.id %>"><%= category.name %></option> 
        <% end %>
    </select>
    <button type="submit">Add Category</button>
</form>

<h1>List Category</h1>
<table>
        <tr>
            <th>id</th>
            <th>Name</th>
        </tr>
        <% items.category.each_with_index do |category, index| %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= category.name %></td>
        </tr>    
        <% end %>    
</table>